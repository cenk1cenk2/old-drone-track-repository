{
  "name": "drone-track-repository",
  "version": "1.0.0-development",
  "description": "Tracking a parent repository and tagging this with the new version if required.",
  "repository": "https://github.com/cenk1cenk2/drone-track-repository",
  "author": "Cenk Kılıç <cenk@kilic.dev>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "node dist/main",
    "prebuild": "rimraf dist/ && rimraf tsconfig*.tsbuildinfo",
    "build": "tsc -p tsconfig.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:start": "ts-node -r tsconfig-paths/register src/main",
    "lint": "prettier --write src/ && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^0.19.2",
    "config": "^3.3.1",
    "execa": "^4.0.3",
    "js-yaml": "^3.14.0",
    "listr2": "^2.4.1",
    "pad": "^3.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.0.4",
    "@cenk1cenk2/eslint-config": "^0.4.5",
    "@rollup/plugin-json": "^4.1.0",
    "@types/config": "^0.0.36",
    "@types/node": "^14.0.26",
    "commitizen": "^4.1.2",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
