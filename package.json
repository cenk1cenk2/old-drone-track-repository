{
  "name": "drone-track-repository",
  "version": "1.0.0-development",
  "description": "Tracking a parent repository and tagging this with the new version if required.",
  "repository": "https://github.com/cenk1cenk2/drone-track-repository",
  "author": "Cenk Kılıç <cenk@kilic.dev>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "node dist/main",
    "prebuild": "rimraf dist/ && rimraf tsconfig*.tsbuildinfo",
    "build": "tsc -p tsconfig.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:start": "ts-node -r tsconfig-paths/register src/main",
    "lint": "prettier --write src/ && eslint --ext .json,.ts,.js --fix src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "src/*.{ts,js,json}": [
      "prettier --write",
      "eslint --ext .json,.ts,.js --fix"
    ]
  },
  "dependencies": {
    "axios": "^0.19.2",
    "config": "^3.3.1",
    "execa": "^4.0.2",
    "js-yaml": "^3.14.0",
    "listr2": "^2.1.6",
    "pad": "^3.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "*",
    "@rollup/plugin-json": "^4.1.0",
    "@types/config": "^0.0.36",
    "@types/node": "^14.0.13",
    "commitizen": "*",
    "cz-conventional-changelog": "*",
    "eslint": "*",
    "husky": "*",
    "lint-staged": "*",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
